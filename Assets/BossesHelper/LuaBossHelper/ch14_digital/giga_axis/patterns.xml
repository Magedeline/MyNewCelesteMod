<?xml version="1.0" encoding="utf-8" ?>
<Patterns>
    <Pattern name="phase1" goto="phase1">
        <Wait time="1.0"/>
        <Attack file="mega_laser_array"/>
        <Wait time="1.5"/>
        <Attack file="data_corruption"/>
        <Wait time="2.0"/>
        <Attack file="orbital_cannons"/>
        <Wait time="2.0"/>
    </Pattern>
    
    <Pattern name="phase2" goto="phase2">
        <Wait time="0.8"/>
        <Attack file="system_override"/>
        <Wait time="1.2"/>
        <Attack file="mega_laser_array"/>
        <Wait time="1.0"/>
        <Attack file="data_corruption"/>
        <Wait time="1.0"/>
        <Attack file="orbital_cannons"/>
        <Wait time="1.5"/>
    </Pattern>
    
    <Pattern name="phase3" goto="phase3">
        <Wait time="0.5"/>
        <Attack file="digital_annihilation"/>
        <Wait time="1.0"/>
        <Attack file="system_override"/>
        <Wait time="0.8"/>
        <Attack file="mega_laser_array"/>
        <Wait time="0.6"/>
        <Attack file="orbital_cannons"/>
        <Wait time="0.8"/>
    </Pattern>
    
    <Event file="intro" goto="phase1"/>
    <Event file="phase2_transition" goto="phase2"/>
    <Event file="phase3_transition" goto="phase3"/>
    <Event file="death"/>
</Patterns>
