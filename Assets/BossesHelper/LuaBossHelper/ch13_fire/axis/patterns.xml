<?xml version="1.0" encoding="utf-8" ?>
<Patterns>
    <Pattern name="phase1" goto="phase1">
        <Wait time="1.0"/>
        <Attack file="laser_barrage"/>
        <Wait time="1.5"/>
        <Attack file="charge_dash"/>
        <Wait time="1.5"/>
        <Attack file="energy_orbs"/>
        <Wait time="2.0"/>
    </Pattern>
    
    <Pattern name="phase2" goto="phase2">
        <Wait time="0.8"/>
        <Attack file="gravity_well"/>
        <Wait time="1.2"/>
        <Attack file="laser_barrage"/>
        <Wait time="1.0"/>
        <Attack file="charge_dash"/>
        <Wait time="1.0"/>
        <Attack file="energy_orbs"/>
        <Wait time="1.2"/>
    </Pattern>
    
    <Pattern name="phase3" goto="phase3">
        <Wait time="0.5"/>
        <Attack file="core_beam"/>
        <Wait time="1.0"/>
        <Attack file="gravity_well"/>
        <Wait time="0.8"/>
        <Attack file="laser_barrage"/>
        <Wait time="0.8"/>
        <Attack file="charge_dash"/>
        <Wait time="0.8"/>
    </Pattern>
    
    <Event file="intro" goto="phase1"/>
    <Event file="phase2_transition" goto="phase2"/>
    <Event file="phase3_transition" goto="phase3"/>
    <Event file="death"/>
</Patterns>
